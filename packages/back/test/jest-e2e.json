{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "**/*.(t|j)s"
  ],
  "coverageDirectory": "../coverage",
  "testTimeout": 60000,
  "setupFilesAfterEnv": ["./setup.ts"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1",
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "preset": "ts-jest",
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "transformIgnorePatterns": [
    "node_modules/(?!(.*\\.mjs$))"
  ]
}